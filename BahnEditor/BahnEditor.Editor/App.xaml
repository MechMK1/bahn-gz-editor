<Application x:Class="BahnEditor.Editor.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 StartupUri="View/EditorWindow.xaml">
	<Application.Resources>
		<Style x:Key="MenuButtonImage"
			   TargetType="Image">
			<Style.Triggers>
				<Trigger Property="IsEnabled"
						 Value="False">
					<Setter Property="Opacity"
							Value="0.3" />
				</Trigger>
			</Style.Triggers>
		</Style>
		<Geometry x:Key="DownArrow">M0,0 L1,0 0.5,1Z</Geometry>
		<Geometry x:Key="UpArrow">M0,1 L1,1 0.5,0Z</Geometry>
		<Geometry x:Key="LeftRightArrow">M0,0.5 L0.3,1 L0.3,0.65 L0.7,0.65 L0.7,1 L1,0.5 L0.7,0 L0.7,0.35 L0.3,0.35 0.3,0Z</Geometry>
	</Application.Resources>
</Application>
